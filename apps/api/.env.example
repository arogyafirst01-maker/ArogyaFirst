# Copy this file to .env and update the values as needed for local development
# This file contains environment variables for the ArogyaFirst API backend

# Environment mode: development or production
NODE_ENV=development

# Server port number
PORT=3000

# Server host (use 0.0.0.0 to bind to all interfaces)
HOST=0.0.0.0

# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/arogyafirst
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/arogyafirst
MONGODB_URI=mongodb://localhost:27017/arogyafirst

# JWT secret for signing access tokens
# WARNING: Change this to a strong, random secret in production!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT secret for signing refresh tokens
# WARNING: Change this to a different strong, random secret in production!
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# Access token expiry time (e.g., 15m, 1h, 1d)
JWT_EXPIRES_IN=15m

# Refresh token expiry time (e.g., 7d, 30d)
JWT_REFRESH_EXPIRES_IN=7d

# CORS allowed origin for frontend requests
# In production, set this to your actual frontend domain
CORS_ORIGIN=http://localhost:5173

# Cookie SameSite policy for refresh tokens
# Options: 'strict', 'lax', 'none'
# Use 'strict' for same-origin deployments (default)
# Use 'lax' for cross-origin deployments with subdomain sharing
# Use 'none' only with secure=true for fully cross-origin setups
# If not set, defaults to 'strict'
COOKIE_SAMESITE=strict

# Application version
APP_VERSION=0.1.0

# Cloudinary Configuration for File Uploads

# Get your credentials from https://cloudinary.com/console
# 1. Sign up for a free account at cloudinary.com
# 2. Go to Dashboard > Account Details to find your Cloud Name, API Key, and API Secret
# Note: Free tier provides 25 credits/month (sufficient for Phase 1 development)

# Cloudinary cloud name from dashboard
CLOUDINARY_CLOUD_NAME=your_cloud_name_here

# Cloudinary API key
CLOUDINARY_API_KEY=your_cloudinary_api_key_here

# Cloudinary API secret
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# Folder prefix for organized storage (helps separate dev/staging/prod environments)
CLOUDINARY_FOLDER=arogyafirst

# Razorpay Payment Gateway Configuration

# Get your credentials from https://razorpay.com/docs/payments/dashboard/account-settings/api-keys/
# 1. Sign up for a Razorpay account at dashboard.razorpay.com
# 2. Navigate to Settings > API Keys to generate keys
# 3. Use test keys (rzp_test_) for development, live keys (rzp_live_) for production
# Note: Never commit live keys to version control!

# Razorpay API Key ID (public key, safe to expose to frontend)
# Example: rzp_test_1234567890abcd
RAZORPAY_KEY_ID=rzp_test_your_key_id

# Razorpay API Key Secret (private key, keep secret!)
# Example: your_secret_key_1234567890
RAZORPAY_KEY_SECRET=your_secret_key

# Razorpay Webhook Secret (optional, for additional webhook security)
# Generate this in Razorpay Dashboard > Settings > Webhooks
# Leave empty to skip webhook signature verification (not recommended for production)
RAZORPAY_WEBHOOK_SECRET=

# Default currency for payments (ISO 4217 code)
# INR for Indian Rupees, USD for US Dollars, etc.
PAYMENT_CURRENCY=INR

# Payment session timeout in seconds (default: 900 = 15 minutes)
# Razorpay checkout session will expire after this duration
PAYMENT_TIMEOUT=900

# Slot Management Configuration

# Default advance booking days (how many days in advance slots can be booked)
# Can be overridden per slot
DEFAULT_ADVANCE_BOOKING_DAYS=30

# Maximum slots per provider per day (prevent spam)
MAX_SLOTS_PER_DAY=50

# Enable MongoDB transactions for concurrent booking (requires replica set)
# Set to false for local development without replica set
ENABLE_TRANSACTIONS=false

# Agora Video Call Configuration

# Get your credentials from https://console.agora.io/
# 1. Sign up for a free Agora account at console.agora.io
# 2. Create a new project and select "Secured mode: APP ID + Token"
# 3. Copy the App ID from the project dashboard
# 4. Generate an App Certificate from the project settings (required for token generation)
# Note: Free tier provides 10,000 minutes per month, sufficient for development and small deployments

# Agora App ID (public identifier, safe to expose to frontend)
# Example: 1234567890abcdef1234567890abcdef
AGORA_APP_ID=your_agora_app_id_here

# Agora App Certificate (private key, keep secret! Used for token generation on backend)
# Example: 0987654321fedcba0987654321fedcba
# WARNING: NEVER expose this to frontend or commit to public repositories
AGORA_APP_CERTIFICATE=your_agora_app_certificate_here

# Email Configuration (SMTP for OTP and notifications)
# Required for email verification during registration

# For SendGrid (recommended for production):
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASS=your_sendgrid_api_key

# For AWS SES:
# EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_aws_smtp_username
# EMAIL_PASS=your_aws_smtp_password

# For Gmail (not recommended for production - has daily sending limits):
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your_gmail@gmail.com
# EMAIL_PASS=your_app_specific_password

# SMTP Configuration
# EMAIL_SECURE: 'true' for SSL (port 465), 'false' for TLS (port 587)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_smtp_username
EMAIL_PASS=your_smtp_password
EMAIL_FROM=noreply@arogyafirst.com

